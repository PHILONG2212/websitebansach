@using WebsiteBanSach.Models
@using webbansach.Model;
@model List<Sach>
<link href="~/Content/csswebbansach/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
@if (Model.Count==0)
{
    <h1>@ViewBag.Sach</h1>
}

@{int i = 0;}
@foreach (var item in Model)
{
    i++;
    <div id="SanPham">
        <div id="AnhBia"><img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="200px" height="250px" /></div>
        <div id="tensach-dongia">
            @if (item.TenSach.Length < 35)
            {
                <div id="TenSach" title="@item.TenSach">
                   
                             @item.TenSach
                </div>
            }

            else
            {
                <div id="TenSach" title="@item.TenSach">

                    @item.TenSach.Substring(0,35).....
                </div>
            
            
            }
            <div id="DonGia">@item.GiaBan VNĐ</div>
        </div>
        

    </div>
    if (i % 3 == 0)
    {
       
    }
}
<style>
    li {
        margin: 10px;
        font-size: 20px;
        height: 40px;
        width: 40px;
        border: 1px solid;
        text-align: center;
        background-color: white;
    }

        li:hover {
            margin: 10px;
            font-size: 20px;
            height: 40px;
            width: 40px;
            border: 1px solid;
            text-align: center;
            background-color: lightgray;
            color: black;
        }
   
</style>