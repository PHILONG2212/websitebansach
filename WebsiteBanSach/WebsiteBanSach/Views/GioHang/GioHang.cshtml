@using WebsiteBanSach.Models
@using webbansach.Model
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>Giỏ hàng</h2>
<table>

<tr>
    <td>
        Mã sách
    </td>
    <td>
        Tên sách
    </td>
    <td>
       Ảnh bìa
    </td>
    <td>
        Đơn giá
    </td>
    <td>
        Số lượng
    </td>
    <td>
        Thành tiền
    </td>
</tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSanh</td>
            @*
                
            *@
           <td><a href="@Url.Action("XemChiTiet", "Sach", new { @MaSach=item.iMaSach})"><img src="@Url.Content("~/HinhAnhSP/"+item.sAnhBia)" width=" 50px" height="50px"></a></td>

            <td>
                @string.Format("{0:0,0}", item.dDonGia) VND
            </td>

            <td>@item.iSoLuong</td>

            <td>
                @string.Format("{0:0,0}", item.ThanhTien) VND
            </td>
        </tr>
    }
    <tr>

        <td colspan="6" style="text-align:right; ">
            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")
        </td>
    </tr>
    <tr>
    <td colspan="6" style="text-align:right; ">
        @using (Html.BeginForm("DatHang","GioHang"))
        {
            <input type="submit" value="Đặt hàng" />
        }
    </td>

    </tr>
     
</table>

<style>
    table{
       text-align: center;
       margin-top:20px;
       
    }
    td{
        border: 2px  solid ; 

        padding:10px;

    }
</style>