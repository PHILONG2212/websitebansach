@using webbansach.Model
@model List<GioHang>
@{
    ViewBag.Title = "Sửa giỏ hàng";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>Giỏ hàng</h2>
<table>

    <tr>
        <td>
            Mã sách
        </td>
        <td>
            Tên sách
        </td>
        <td>
          Ảnh bìa
        </td>
        <td>
            Đơn giá
        </td>
        <td>
            Số lượng
        </td>
        <td>
            Thành tiền
        </td>
    </tr>

@foreach (var item in Model)
{

        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSanh</td>

            <td><img src="@Url.Content("~/HinhAnhSP/"+item.sAnhBia)" width=" 50px" height="50px"></td>

            <td>
                @string.Format("{0:0,0}", item.dDonGia) VND
            </td>
            @*chỉnh sửa giỏ hàng CapNhatGioHang*@
           @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaSach }))
            {

            <td>@Html.TextBox("txtSoLuong",item.iSoLuong)</td>
            

            <td>
                @string.Format("{0:0,0}", item.ThanhTien) VND
            </td>
            <td>

                <input type="submit" value="Cập Nhật" />
                <br />
                @*xóa giỏ hàng gọi XoaGioHang*@
                @Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSP=item.iMaSach})
            </td>
            }
        </tr>
        
}
    </table>
<style>
   td{
        border:2px solid;
        text-align:center;
        padding:10px;
    }
   table{
       margin-top:20px;
   }
    li {
        margin: 10px;
        font-size: 20px;
        height: 40px;
        width: 40px;
        border: 1px solid;
        text-align: center;
        background-color: white;
    }

        li:hover {
            margin: 10px;
            font-size: 20px;
            height: 40px;
            width: 40px;
            border: 1px solid;
            text-align: center;
            background-color: lightgray;
            color: black;
        }
</style>