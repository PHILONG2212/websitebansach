@model WebsiteBanSach.Models.Sach

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<div class="ChinhSua">

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        

        <div class="editor-label">
            @Html.LabelFor(model => model.MaSach)

            <div class="editor-field">
                <span style="font-size:15px;margin-top:2px;margin-left:5px;">@Model.MaSach</span>
                @Html.Hidden("MaSach", Model.MaSach)
        </div>
    </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TenSach)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenSach)
            @Html.ValidationMessageFor(model => model.TenSach)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GiaBan)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GiaBan)
            @Html.ValidationMessageFor(model => model.GiaBan)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MoTa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MoTa)
            @Html.ValidationMessageFor(model => model.MoTa)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AnhBia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AnhBia)
            @Html.ValidationMessageFor(model => model.AnhBia)
        </div>
        @Html.TextBox("abc","abc")
        <div class="editor-label">
            @Html.LabelFor(model => model.NgayCapNhat)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.NgayCapNhat)
            @Html.ValidationMessageFor(model => model.NgayCapNhat)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SoLuongTon)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SoLuongTon)
            @Html.ValidationMessageFor(model => model.SoLuongTon)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaNXB)
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaNXB")
        
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaChuDe)
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaChuDe")
           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Moi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Moi)
            @Html.ValidationMessageFor(model => model.Moi)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MoTa)
        </div>
        <div class="editor-field">

            <textarea name="MoTa">@Model.MoTa</textarea>
        </div>
        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</div>

<style>
    fieldset {
        line-height:30px;
        
    }
    .ChinhSua{
        margin-left:10px;

    }
    div, input{
        margin-top:10px;
    }
</style>
